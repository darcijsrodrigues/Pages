<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Pages.SampleNavigationPage_Xaml">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0,10,0,0" Android="0,0,0,0" />
	</ContentPage.Padding>
	<ContentPage.Content>		
		<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" BackgroundColor="#D7DCDE">
			<Label Text="NavigationPage_Xaml" TextColor="Black"/>
			<Button Text="Push" BackgroundColor="Gray" TextColor="Black" Clicked="onPushButtonClicked"/>
			<Button Text="Push Modal" BackgroundColor="Gray" TextColor="Black" Clicked="onPushModalButtonClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
